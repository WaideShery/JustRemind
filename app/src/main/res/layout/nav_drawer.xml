<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_drawer_vertical_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_drawer_header_height"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/nav_drawer_horizontal_padding"
        android:paddingRight="@dimen/nav_drawer_horizontal_padding"
        android:paddingTop="@dimen/nav_drawer_vertical_padding">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nav_drawer_menu_top_margin"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/miInbox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_drawer_menu_item_height"
            android:background="@drawable/nav_drawer_menu_item_selector"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/nav_drawer_horizontal_padding"
            android:paddingRight="@dimen/nav_drawer_horizontal_padding"
            android:text="@string/nav_drawer_inbox"
            android:textColor="@color/nav_drawer_menu_text_color"
            android:textSize="@dimen/nav_drawer_menu_tex_size"/>

        <CheckBox
            android:id="@+id/miToday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_drawer_menu_item_height"
            android:background="@drawable/nav_drawer_menu_item_selector"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/nav_drawer_horizontal_padding"
            android:paddingRight="@dimen/nav_drawer_horizontal_padding"
            android:text="@string/nav_drawer_today"
            android:textColor="@color/nav_drawer_menu_text_color"
            android:textSize="@dimen/nav_drawer_menu_tex_size"/>

        <CheckBox
            android:id="@+id/miSevenDay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_drawer_menu_item_height"
            android:background="@drawable/nav_drawer_menu_item_selector"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/nav_drawer_horizontal_padding"
            android:paddingRight="@dimen/nav_drawer_horizontal_padding"
            android:text="@string/nav_drawer_next_seven_day"
            android:textColor="@color/nav_drawer_menu_text_color"
            android:textSize="@dimen/nav_drawer_menu_tex_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_drawer_divider_height"
            android:layout_marginBottom="@dimen/nav_drawer_divider_horizontal_margin"
            android:layout_marginTop="@dimen/nav_drawer_divider_horizontal_margin"
            android:background="@color/nav_drawer_divider_bg"/>

        <CheckBox
            android:id="@+id/miSettings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_drawer_menu_item_height"
            android:background="@drawable/nav_drawer_menu_item_selector"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/nav_drawer_horizontal_padding"
            android:paddingRight="@dimen/nav_drawer_horizontal_padding"
            android:text="@string/nav_drawer_settings"
            android:textColor="@color/nav_drawer_menu_text_color"
            android:textSize="@dimen/nav_drawer_menu_tex_size"/>

    </LinearLayout>

</LinearLayout>
